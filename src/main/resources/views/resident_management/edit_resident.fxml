<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="600.0" stylesheets="@../views_styles.css"
            xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.bluemoonmanagement.controllers.Resident_management.EditResident_Controller">
   <AnchorPane prefHeight="70.0" prefWidth="600.0" style="-fx-background-color: #809bce;">
      <Label alignment="CENTER" layoutX="155.0" layoutY="18.0" text="SỬA THÔNG TIN CƯ DÂN" textAlignment="CENTER"
             textFill="WHITE">
         <font>
            <Font name="System Bold" size="24.0"/>
         </font>
      </Label>
   </AnchorPane>
   <AnchorPane layoutX="50.0" layoutY="88.0" opacity="0.8" prefHeight="498.0" prefWidth="500.0"
               style="-fx-background-color: #809bce;">
      <TextArea fx:id="residentNote" layoutX="75.0" layoutY="330.0" prefHeight="150.0" prefWidth="350.0"
                wrapText="true"/>

      <Label layoutX="75.0" layoutY="310.0" text="Lý do vào ở" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0"/>
         </font>
      </Label>
      <ChoiceBox fx:id="residentStatus" layoutX="255.0" layoutY="280.0" prefWidth="170.0"/>

      <Label layoutX="255.0" layoutY="260.0" text="Trạng thái" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0"/>
         </font>
      </Label>
      <ChoiceBox fx:id="residentIsOwner" layoutX="75.0" layoutY="280.0" prefWidth="170.0"/>

      <Label layoutX="75.0" layoutY="260.0" text="Có là chủ sở hữu" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0"/>
         </font>
      </Label>
      <TextField fx:id="residentRelationship" layoutX="255.0" layoutY="230.0" prefWidth="170.0"/>

      <Label layoutX="255.0" layoutY="210.0" text="Quan hệ với chủ hộ" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0"/>
         </font>
      </Label>
      <TextField fx:id="residentNation" layoutX="255.0" layoutY="130.0" prefWidth="170.0"/>
      <TextField fx:id="residentPhoneNumber" layoutX="75.0" layoutY="180.0" prefWidth="350.0"/>

      <Label layoutX="255.0" layoutY="110.0" text="Quốc tịch" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0"/>
         </font>
      </Label>

      <Label layoutX="75.0" layoutY="160.0" text="Số điện thoại" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0"/>
         </font>
      </Label>
      <ChoiceBox fx:id="residentRoom" layoutX="75.0" layoutY="230.0" prefWidth="170.0"/>

      <Label layoutX="75.0" layoutY="210.0" text="Phòng" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0"/>
         </font>
      </Label>
      <ChoiceBox fx:id="residentGender" layoutX="75.0" layoutY="130.0" prefWidth="170.0"/>

      <Label layoutX="75.0" layoutY="110.0" text="Giới tính" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0"/>
         </font>
      </Label>
      <DatePicker fx:id="residentDOB" layoutX="75.0" layoutY="80.0" prefWidth="350.0"/>

      <Label layoutX="75.0" layoutY="60.0" text="Ngày sinh" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0"/>
         </font>
      </Label>
      <TextField fx:id="residentName" layoutX="75.0" layoutY="30.0" prefWidth="350.0"/>

      <Label layoutX="75.0" layoutY="10.0" text="Họ và tên" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0"/>
         </font>
      </Label>
   </AnchorPane>

   <Button layoutX="50.0" layoutY="600.0" mnemonicParsing="false" onAction="#handleSave" prefHeight="35.0"
           prefWidth="230.0" text="Lưu" textFill="WHITE">
      <font>
         <Font name="System Bold" size="15.0"/>
      </font>
   </Button>
   <Button layoutX="320.0" layoutY="600.0" mnemonicParsing="false" onAction="#handleCancel" prefHeight="35.0"
           prefWidth="230.0" text="Hủy" textFill="WHITE">
      <font>
         <Font name="System Bold" size="15.0"/>
      </font>
   </Button>

</AnchorPane>
